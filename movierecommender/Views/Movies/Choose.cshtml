@using movierecommender.Models
@model  IEnumerable<Movie>
@{
    ViewBag.Title = "Choose";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movie Recommender</h1>

<h3>Pick the movie you best liked in the past?</h3>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-block">
                        <h3 class="card-title">@movie.MovieName</h3>
                        <a href="@Url.Action("Recommend", "Movies", new { id = movie.MovieID })" class="btn btn-primary">Choose me</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />
    <button type="button" OnClick="location.href='@Url.Action("Choose", "Movies")'" class="btn btn-lg breadcrumb btn-link">Haven't seen these movies, Try again!</button> 

